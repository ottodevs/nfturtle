{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "tests",
            "type": "node",
            "runtimeExecutable": "${cwd}/node_modules/.bin/mocha",
            "request": "launch",
            "args": ["test/*.ts"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "${workspaceRoot}/node_modules/**/*"]
        },
        {
            "name": "Debug Bot with ts-node",
            "type": "node",
            "runtimeExecutable": "${cwd}/node_modules/.bin/ts-node",
            "runtimeArgs": ["--transpileOnly", "--project", "tsconfig.build.json", "--swc", "--files"],
            "request": "launch",
            "args": ["src/bot/bot.ts"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
